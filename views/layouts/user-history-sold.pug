include ../components/navbar.pug
.container
    div.row
        div.col-sm-1
        div.col-sm-10
            h1 Lịch sử bán
        div.col-sm-1

    div.table.row
        div.col-sm-1
        table.col-sm-10
            thead
                tr
                    th(scope='col') Mã Giao dịch
                    th(scope='col') Chi tiết
            if booksold
                tbody
                    each sell in booksold
                        tr
                            td #{sell.id}
