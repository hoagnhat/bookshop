include ../components/navbar.pug
.container
  .row
    if books
      each book in books
        .col-sm-6.col-md-4.col-lg-3.mt-3.mb-3
          .card(style='width: 18rem;')
            img.card-img-top(src='static/img/breathbecomeair.jpg', alt='...')
            .card-body
              h5.card-title= book.bookName
              p.card-text Price: #{book.price}
              a.btn.btn-primary(href=`/add/${book.id}`) Add to cart
    .position-relative
      nav(aria-label='Page navigation example')
        ul.pagination
          if pages
            each page in pages
              li.page-item
                a.page-link(href=`/books?page=${page}`)= page
          