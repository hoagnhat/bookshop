include ../components/navbar.pug
.container
    if books
        div
            each book in books
                div
                    form.form-horizontal(action='/book-manager', method='POST')
                        //p
                        //    -var url = '/book?bookName=' + book.bookName
                        //    a(href=url) Tên sách: #{book.bookName}
                        p Tên sách: #{book.bookName}
                        input(hidden, type='text', name='bookName', value=book.bookName)
                        p Số lượng: #{book.count}
                        input(hidden, type='number', name='count', value=book.count)
                        span Giá
                        input(type='number', name='price', value=book.price)
                        br
                        input(type='submit')
                        br
                        br
                        br